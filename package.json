{
  "name": "@savvy-css/savvy",
  "version": "0.0.1",
  "description": "A Lightweight & Highly-Composable Modular CSS Framework",
  "main": "build/savvy.css",
  "style": "build/savvy.css",
  "files": [
    "build/*"
  ],
  "repository": "git@github.com:savvy-css/savvy.git",
  "author": "Brian Sipple <brsipple42@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "del build/**",
    "setup": "mkdir -p build",
    "transform": "postcss index.css -o build/savvy.css --config postcss.config.js",
    "transform:minify": "NODE_ENV=production postcss index.css -o build/savvy.css --config postcss.config.js",
    "transform:watch": "postcss index.css -o build/savvy.css --config postcss.config.js -w",
    "build": "npm run clean && npm run setup && npm run transform",
    "build:dist": "npm run clean && npm run setup && npm run transform:minify",
    "prepublish": "nsp check && npm run clean && npm run setup && npm run build:dist",
    "deploy": "np"
  },
  "devDependencies": {
    "@savvy-css/base-settings": "^0.0.3",
    "@savvy-css/utilities": "^0.0.4",
    "cssnano": "^3.10.0",
    "del-cli": "^1.0.0",
    "np": "^2.15.0",
    "nsp": "^2.6.3",
    "postcss-cli": "^4.0.0",
    "postcss-cssnext": "^2.10.0",
    "postcss-import": "^10.0.0",
    "postcss-reporter": "^3.0.0"
  },
  "keywords": [
    "css",
    "css framework",
    "composable css",
    "functional css",
    "modular css",
    "responsive css",
    "lightweight css"
  ]
}
