{
  "name": "@savvy-css/savvy",
  "version": "0.0.0",
  "description": "A Lightweight & Highly-Composable Modular CSS Framework",
  "main": "index.css",  
  "style": "index.css",
  "files": [
    "index.css"
  ],
  "repository": "git@github.com:savvy-css/savvy.git",
  "author": "Brian Sipple <brsipple42@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "del build/**",
    "setup": "yarn install && mkdir -p build",
    "transform": "postcss index.css -o build/savvy.min.css -c postcss.config.js",
    "transform:watch": "yarn run transform -w",
    "build:dist": "yarn run clean && yarn run setup && yarn run transform",
    "prepublish": "nsp check",
    "release": "np"
  },
  "devDependencies": {
    "del-cli": "^0.2.1",
    "np": "^2.14.1",
    "nsp": "^2.6.3",
    "postcss-cli": "^3.2.0",
    "postcss-cssnext": "^2.10.0",
    "postcss-import": "^9.1.0",
    "postcss-reporter": "^3.0.0"
  },
  "keywords": [
    "css",
    "css framework",
    "composable css",
    "functional css",
    "modular css",
    "responsive css",
    "lightweight css"
  ]
}
